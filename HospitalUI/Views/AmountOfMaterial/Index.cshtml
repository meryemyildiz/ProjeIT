@using EntityLayer.Concrete
@model List<AmountOfMaterial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h3>Materyal Miktarı Sayfası</h3>
<br />
<!DOCTYPE html>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Materyal Miktarı</th>
    </tr>
    @foreach (var item in Model)
    {
       
        
            <tr>
                <td>@item.AmountId</td>
                <td>@item.Amount</td>
                <td><a href="/AmountOfMaterial/DeleteAmountOfMaterial/@item.AmountId" class="btn btn-danger">SİL</a></td>
                <td><a href="/AmountOfMaterial/UpdateAmountOfMaterial/@item.AmountId" class="btn btn-warning">GÜNCELLE</a></td>
            </tr>
        

    }
</table>
<a href="/AmountOfMaterial/AddAmountOfMaterial" class="btn btn-info">Yeni Materyal Miktarı Girişi</a>

